<!--index.wxml-->
<view class="index">
    <view class="head">
        <view class="title">{{title}}</view>
    </view>

    <view class="body">
        <view class="widgets">
            <block wx:for-items="{{list}}">
              <view class="widgets__item">
                  <navigator url="/pages/{{item.id}}/{{item.id}}" class="widget">
                    <text class="widget__name">{{item.name}}</text>
                  </navigator>
                </view>
            </block>
        </view>
    </view>
</view>